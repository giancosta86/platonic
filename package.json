{
  "name": "@giancosta86/platonic",
  "version": "1.0.1",
  "description": "General-purpose archetype directory reification",
  "keywords": [
    "archetype",
    "reification",
    "library",
    "general-purpose",
    "static",
    "template",
    "ejs"
  ],
  "homepage": "https://github.com/giancosta86/platonic#readme",
  "bugs": "https://github.com/giancosta86/platonic/issues",
  "license": "MIT",
  "author": {
    "name": "Gianluca Costa",
    "email": "gianluca@gianlucacosta.info",
    "url": "https://gianlucacosta.info/"
  },
  "files": [],
  "main": "dist",
  "types": "dist",
  "repository": "giancosta86/platonic",
  "scripts": {
    "clean": "rimraf dist coverage giancosta86-*.tgz",
    "clean:all": "yarn clean && rimraf node_modules",
    "format": "prettier --write .",
    "check-all": "yarn check-format && yarn lint && yarn test",
    "check-format": "prettier --check .",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx,.cjs,.mjs",
    "test": "cross-env NODE_OPTIONS=\"-r ts-node/register --no-warnings\" jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "build": "yarn compile-ts",
    "compile-ts": "tsc",
    "prepack": "yarn check-all && yarn build && yarn test:prod",
    "watch": "yarn compile-ts --watch",
    "test:prod": "jest dist --testPathIgnorePatterns=/_.+"
  },
  "dependencies": {
    "ejs": "^3.1.8",
    "glob": "^8.1.0",
    "immutable": "^4.2.2",
    "recursive-copy": "^2.0.14"
  },
  "devDependencies": {
    "@swc/core": "^1.2.218",
    "@swc/jest": "^0.2.22",
    "@types/ejs": "^3.1.2",
    "@types/glob": "^8.0.1",
    "@types/jest": "^28.1.4",
    "@types/node": "^16",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.18.0",
    "jest": "^28.1.3",
    "jest-extended": "^3.2.3",
    "prettier": "^2.7.1",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=16.19.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
